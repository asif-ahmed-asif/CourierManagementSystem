@model CourierManagementSystem.Models.Courier

@{
    ViewData["Title"] = "Home Page";
}

@if (!User.Identity.IsAuthenticated)
{
    <div class="row p-2">
        <div class="text-end">
            <a asp-action="Login" asp-controller="Logins" style="width:120px;" class="btn btn-primary">
                <i class="fa-solid fa-right-to-bracket"></i> Log In
            </a>
        </div>
    </div>
}

<div>
    <div class="container p-3">
        <div class="row pt-4">
            <div class="mx-auto col-10 col-md-8 col-lg-6">
                <h2 class="text-center">Track Courier</h2><hr />
                <div class="form-group">
                    <form asp-action="Index" class="d-flex">
                        <input class="form-control me-sm-2" name="search" type="search" placeholder="Enter Consignment No or Recipient Mobile No">
                        <button class="btn btn-secondary my-2 my-sm-0" style="width:150px" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@if(Model != null)
{
    <div class="container">
        <h1>Courier Found</h1><hr />
        <table class="table table-striped table-hover mt-4" id="dt">
            <thead>
                <tr class="table-primary">
                    <th scope="col">Consignment No</th>
                    <th scope="col">Status</th>
                    <th scope="col">Customer Name</th>
                    <th scope="col">Customer Mobile</th>
                    <th scope="col">Recipient Name</th>
                    <th scope="col">Recipient Address</th>
                    <th scope="col">Recipient Mobile</th>
                    <th scope="col">Date Of Place</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.ConsignmentNo</td>
                    <td>@Model.Status?.Name</td>
                    <td>@Model.CustomerName</td>
                    <td>@Model.CustomerMobile</td>
                    <td>@Model.RecipientName</td>
                    <td>@Model.RecipientAddress</td>
                    <td>@Model.RecipientMobile</td>
                    <td>@Model.DateOfPlace</td>
                    <td>
                        <a class="btn btn-success mx-1" asp-action="Details" asp-route-id="@Model.ConsignmentNo">
                            <i class="fa-solid fa-circle-info"></i> Details
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>

    </div>
}
else
{
    <h2 class="text-danger">
        @TempData["Result"]
    </h2>
}

